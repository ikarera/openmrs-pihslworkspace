    <!--Outcome-->
    <section id="mh-Outcome" sectionTag="fieldset" headerTag="legend" headerStyle="title"
             headerCode="pihcore.outcome">
        <div class="section-container">

            <includeIf velocityTest="$patient.gender == 'F' ">

                <!-- Pregnant -->
                <obs conceptId="CIEL:5272" toggle="pregnant"
                     answerConceptId="CIEL:1065"
                     answerCode="pihcore.pregnancy.status"
                     style="checkbox"/>

                <div id="pregnant" class="two-columns">
                    <div>
                            <label>
                                <uimessage code="pihcore.pregnancy.lastPeriod"/>
                            </label>
                            <obs id="lastPeriodDate" conceptId="CIEL:1427"/>
                    </div>
                    <div>
                            <label>
                                <uimessage code="pihcore.pregnancy.dueDate"/>
                            </label>
                            <obs id="edd" conceptId="CIEL:5596" allowFutureDates="true"/>
                    </div>
                </div>

                <div class="two-columns hidden calculated-edd-and-gestational" id="calculated-edd-and-gestational">
                    <div>
                        <span id="calculated-gestational-age-wrapper">
                            <span id="calculated-gestational-age-label">
                                <uimessage code="pihcore.calculatedGestationalAge"/>:&#160;
                            </span>
                            <span id='calculated-gestational-age-value' class="calculated-gestational-age-value value"></span>
                        </span>
                    </div>
                    <div>
                        <span id="calculated-edd-wrapper">
                            <span id="calculated-edd-label">
                                <uimessage code="pihcore.calculatedEstimatedDeliveryDate"/>:&#160;
                            </span><br/>
                            <span id='calculated-edd' class="calculated-edd value"></span>
                        </span>
                    </div>
                </div>

                <br/>
            </includeIf>

            <p class="side-by-side">
                <label>
                    <uimessage code="pihcore.mentalhealth.hasCHW"/>
                </label>
                <obs conceptId="PIH:3293" style="radio" answerConceptIds="PIH:YES,PIH:NO"
                     answerCodes="Yes,No" answerSeparator="" required="true"/>
            </p>


            <p>
                <label>
                    <uimessage code="pihcore.consult.returnVisitDate"/>:
                </label>
                <span class="small">
                    <obs id="return-visit-date" conceptId="PIH:RETURN VISIT DATE" allowFutureDates="true" allowPastDates="false" />
                </span>
            </p>

        </div>
    </section>


    <ifMode mode="VIEW" include="false">
        <div id="buttons">
            <submit submitClass="confirm right" submitCode="mirebalais.save"/>
