                                            <obs id="doseUnit-{name}" class="doseInput select-arrow" placeholder="unit"
                                                 conceptId="PIH:Dosing units coded"
                                                 answerConceptIds="CIEL:161553,CIEL:161554,CIEL:1513"
                                                 answerCodes="mg,g,tablet"/>
